<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AccordionGroupView">
        <attr name="AVG_SelectedId" format="reference" />
    </declare-styleable>

    <declare-styleable name="AccordionView">
        <attr name="av_state_expanded" format="boolean" />
        <attr name="av_expanded" format="boolean" />
        <attr name="av_expandable" format="boolean" />
        <attr name="av_expand_on_heading_click" format="boolean" />
        <attr name="av_heading_text" format="string" />
        <attr name="av_heading_text_Size" format="dimension" />
        <attr name="av_heading_text_appearance" format="reference" />
        <attr name="av_animation_duration" format="integer" />
        <attr name="av_expand_icon_color" format="color" />
        <attr name="av_heading_text_color" format="color" />
        <attr name="av_animation" format="enum">
            <enum name="anim_none" value="1" />
            <enum name="anim_height_transition" value="2" />
        </attr>
        <attr name="av_background" format="enum">
            <enum name="bg_card" value="1" />
            <enum name="bg_stroked" value="2" />
            <enum name="bg_custom" value="3" />
        </attr>
    </declare-styleable>

    <style name="Accordion" />

    <style name="Accordion.View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AccordionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/av_spacing_size_tiny</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AccordionHeaderText">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">@dimen/av_spacing_size_small</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text">HEADING</item>
    </style>

    <style name="AccordionHeaderButton">
        <item name="android:layout_width">@dimen/av_heading_button_height</item>
        <item name="android:layout_height">@dimen/av_heading_button_height</item>
        <item name="android:padding">@dimen/av_heading_icon_padding</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="AccordionContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
        <item name="android:paddingStart">@dimen/av_spacing_size_medium</item>
        <item name="android:paddingEnd">@dimen/av_spacing_size_medium</item>
        <item name="android:paddingBottom">@dimen/av_spacing_size_medium</item>
    </style>

    <style name="AccordionHeadingTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
</resources>