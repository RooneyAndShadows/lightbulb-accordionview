<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AccordionGroupView">
        <attr name="AVG_SelectedId" format="reference" />
    </declare-styleable>

    <declare-styleable name="AccordionView">
        <attr name="AV_Expanded" format="boolean" />
        <attr name="AV_Expandable" format="boolean" />
        <attr name="AV_ExpandOnHeadingClick" format="boolean" />
        <attr name="AV_HeadingText" format="string" />
        <attr name="AV_HeadingIconSize" format="dimension" />
        <attr name="AV_HeadingTextSize" format="dimension" />
        <attr name="AV_HeadingTextAppearance" format="reference" />
        <attr name="AV_AnimationDuration" format="integer" />
        <attr name="AV_BackgroundCornerRadius" format="integer" />
        <attr name="AV_ExpandIconColor" format="color" />
        <attr name="AV_BackgroundColor" format="color" />
        <attr name="AV_HeadingTextColor" format="color" />
        <attr name="AV_BackgroundDrawable" format="reference" />
        <attr name="AV_AnimationType" format="enum">
            <enum name="anim_none" value="1" />
            <enum name="anim_height_transition" value="2" />
        </attr>
    </declare-styleable>

    <style name="Accordion" />

    <style name="Accordion.View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AccordionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/av_spacing_size_tiny</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AccordionHeaderText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/av_spacing_size_medium</item>
        <item name="android:paddingEnd">@dimen/av_spacing_size_small</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:text">HEADING</item>
    </style>

    <style name="AccordionHeaderButton">
        <item name="android:layout_width">@dimen/av_heading_button_height</item>
        <item name="android:layout_height">@dimen/av_heading_button_height</item>
        <item name="android:padding">@dimen/av_heading_icon_padding</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="AccordionContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
        <item name="android:paddingStart">@dimen/av_spacing_size_medium</item>
        <item name="android:paddingEnd">@dimen/av_spacing_size_medium</item>
        <item name="android:paddingBottom">@dimen/av_spacing_size_medium</item>
    </style>

    <style name="AccordionHeadingTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
</resources>